<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/event_item_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/event_edit_name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Event"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12.5dp"
            android:maxLength="11"
            android:text="Placeholder"
            android:textColor="#000"
            android:textSize="17sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_layout_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date" />

            <TextView
                android:id="@+id/event_layout_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_layout_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time" />

            <TextView
                android:id="@+id/event_layout_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>